<!-- This ejs template expects content items to be provided directly from 
    the yaml of the listing page, e.g.,
listing: 
    - id: featured-listings
      template: ejs/featured.ejs
      contents:
        - articles/article1
        - articles/article3
If there is any additional metadata you wish to add, it must go in the yaml 
of each article (e.g., see `titleoverride-listing`) -->

```{=html}

<div class="project-cards">

  <% for (const item of items) { %>
    <!-- Make the whole card clickable by wrapping it in a link -->
    <a href="<%- item.projectLink %>" class="project-card-link">
      <div class="project-card">

        <!-- Card Header: Title on the Left, Code Icon on the Right -->
        <div class="card-header d-flex justify-content-between align-items-center">
          <div class="card-title">
            <%= item.title %>
          </div>
          <% if (item.code) { %>
            <div class="card-code">
              <i class="bi bi-code-square"></i> <!-- Bootstrap code-square icon -->
            </div>
            <% } %>
        </div>

        <!-- Thumbnail Image -->
        <% if (item.thumbnail) { %>
          <div class="card-thumbnail">
            <img src="<%- item.path.replace(/[^/]+\.qmd$/, '') %><%- item.thumbnail %>"
              alt="<%- item.title %> Thumbnail">
          </div>
          <% } %>

            <!-- Description -->
            <div class="card-description">
              <%- item.description %>
            </div>

            <!-- Languages and Tools -->
            <div class="card-tools">
              <% if (item.languages) { %>
                <span class="tools">
                  <% item.languages.forEach(function(lang) { %>
                    <span class="tool-item"><%- lang %></span>
                    <% }); %>
                </span>
                <% } %>
            </div>

            <!-- BTS Section -->
            <div class="card-bts">
              <a href="<%- item.path %>">Read Behind The Scenes (BTS)</a>
            </div>

      </div>
    </a>
    <% } %>

</div>


```